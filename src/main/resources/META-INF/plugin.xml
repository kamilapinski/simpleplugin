<idea-plugin>
    <id>com.github.kamilapinski.motivationalquoteplugin</id>
    <name>Motivational Quote of the Day</name>
    <version>1.0</version>
    <vendor email="you@github.kamilapinski.com" url="http://github.kamilapinski.com">Your Name</vendor>

    <description>
        A simple plugin to display a motivational quote every day.
    </description>

    <applicationListeners>
        <listener class="com.github.kamilapinski.motivationalquoteplugin.QuoteAppComponent"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <actions>
        <action id="com.github.kamilapinski.motivationalquoteplugin.ShowQuoteAction"
                class="com.github.kamilapinski.motivationalquoteplugin.ShowQuoteAction"
                text="Show Motivational Quote"
                description="Displays a motivational quote.">
            <add-to-group group-id="MainToolbar" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
